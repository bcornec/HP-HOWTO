    BusID       "PCI:1:8:0"
[FR::FR]    #VideoRam    4096
[FR::FR]    #VideoRam 4096
[FR::FR]    # Insert Clocks lines here if appropriate
EndSection

Section "Device"
    Identifier  "rage"
    Driver      "r128"
    BusID       "PCI:01:08:00"
EndSection
    
    
[FR::FR]# **********************************************************************
[FR::FR]# Screen sections
[FR::FR]# **********************************************************************

[FR::FR]# Any number of screen sections may be present.  Each describes
[FR::FR]# the configuration of a single screen.  A single specific screen section
[FR::FR]# may be specified from the X server command line with the "-screen"
[FR::FR]# option.
Section "Screen"
    Identifier  "Screen 1"
    Device      "rage"
    Monitor     "HP4331D"
    DefaultDepth 16

    Subsection "Display"
        Depth       8
        Modes       "640x480" "800x600" "1024x768" "1280x1024"
        ViewPort    0 0
    EndSubsection
    Subsection "Display"
        Depth       16
[FR::FR]#        Modes       "800x600" "1024x768" "1280x1024"
        Modes        "1024x768" "1280x1024" "640x480" "800x600"
        ViewPort    0 0
    EndSubsection
    Subsection "Display"
        Depth       24
[FR::FR]#        Modes       "640x480" "800x600" "1024x768" "1280x1024"
        Modes       "1280x1024" "1024x768" "800x600" "640x480"
        ViewPort    0 0
    EndSubsection
    
EndSection
    
Section "Screen"
    Identifier  "Screen 2"
    Device      "G200"
    Monitor     "HP4331D"
    DefaultDepth 16

    Subsection "Display"
        Depth       8
        Modes       "640x480" "800x600" "1024x768" "1280x1024"
        ViewPort    0 0
    EndSubsection
    Subsection "Display"
        Depth       16
[FR::FR]#        Modes       "800x600" "1024x768" "1280x1024"
        Modes      "1280x1024"  "640x480" "800x600" "1024x768"
        ViewPort    0 0
    EndSubsection
    Subsection "Display"
        Depth       24
        Modes       "640x480" "800x600" "1024x768" "1280x1024"
        ViewPort    0 0
    EndSubsection
EndSection
    
    
[FR::FR]# **********************************************************************
[FR::FR]# ServerLayout sections.
[FR::FR]# **********************************************************************

[FR::FR]# Any number of ServerLayout sections may be present.  Each describes
[FR::FR]# the way multiple screens are organised.  A specific ServerLayout
[FR::FR]# section may be specified from the X server command line with the
[FR::FR]# "-layout" option.  In the absence of this, the first section is used.
[FR::FR]# When now ServerLayout section is present, the first Screen section
[FR::FR]# is used alone.
    
Section "ServerLayout"

[FR::FR]# The Identifier line must be present
    Identifier  "Simple Layout"
        
[FR::FR]# Each Screen line specifies a Screen section name, and optionally
[FR::FR]# the relative position of other screens.  The four names after
[FR::FR]# primary screen name are the screens to the top, bottom, left and right
[FR::FR]# of the primary screen.  In this example, screen 2 is located to the
[FR::FR]# right of screen 1.
        
[FR::FR]#   Screen "Screen 1"
    Screen "Screen 1" "" "" "" "Screen 2"
    Screen "Screen 2" "" "" "Screen 1" ""
[FR::FR]#    Screen "Screen 2"

[FR::FR]# Each InputDevice line specifies an InputDevice section name and
[FR::FR]# optionally some options to specify the way the device is to be
[FR::FR]# used.  Those options include "CorePointer", "CoreKeyboard" and
[FR::FR]# "SendCoreEvents".

    InputDevice "Mouse1" "CorePointer"
    InputDevice "Keyboard1" "CoreKeyboard"
    
EndSection
