[FR::FR]#    Option "XkbModel"    "pc101"
[FR::FR]#    Option "XkbLayout"   "us"
[FR::FR]#    Option "XkbVariant"  ""
[FR::FR]#    Option "XkbOptions"  ""

[FR::FR]#    Option "XkbDisable"

    Option "XkbRules"   "xfree86"
    Option "XkbModel"   "pc101"
    Option "XkbLayout"  "us"
    
EndSection


[FR::FR]# **********************************************************************
