[FR::FR]# **********************************************************************

Section "InputDevice"

[FR::FR]# Identifier and driver

    Identifier  "Mouse1"
    Driver      "mouse"
[FR::FR]#    Option "Protocol"    "PS/2"
    Option "Protocol"    "imps/2"
Option "ZAxisMapping" "4 5"
